	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename"
			value="classpath:com/ge/trans/rmd/common/resources/messages" />
		<property name="defaultEncoding" value="UTF-8" />
	</bean>

	<mvc:interceptors>
		<bean class="com.ge.trans.rmd.common.interceptor.RMDLocaleChangeInterceptor">
			<property name="attributeName" value="userPreferredLanguage" />
		</bean>
		<bean class="com.ge.trans.rmd.common.interceptor.RMDApplicationInterceptor" />


	</mvc:interceptors>

	<mvc:resources mapping="/css/**" location="/css/" />
	<mvc:resources mapping="/scripts/**" location="/scripts/" />
	<mvc:resources mapping="/js/**" location="/js/" />
	<mvc:resources mapping="/data/**" location="/data/" />
	<mvc:resources mapping="/img/**" location="/img/" />
	<mvc:resources mapping="/components/**" location="/components/" />
	<mvc:resources mapping="/json/**" location="/json/" />
	<mvc:resources mapping="/html/**" location="/html/" />

	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
		<property name="defaultLocale" value="en" />
	</bean>

	<context:property-placeholder
		location="file:..\Conf\rmd.properties" />
	<util:properties id="serverProperties"
		location="file:..\Conf\rmd.properties"></util:properties>

	<bean id="ehcacheSystemProperties"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" value="#{@systemProperties}" />
		<property name="targetMethod" value="putAll" />
		<property name="arguments">
			<util:properties>
				<prop key="cache.host">${cache.host}</prop>
				<prop key="cache.port">${cache.port}</prop>
				<prop key="distcache.host">${distcache.host}</prop>
			</util:properties>
		</property>
	</bean>

	<bean id="webServiceLocator" class="com.ge.trans.rmd.common.util.WebServiceLocator" />
	<!-- KM Related Entries -->
	<bean id="rtRequestService"
		class="com.ge.trans.rmd.km.service.RuleTesterRequestServiceImpl" />

	<bean id="kSRequestService"
		class="com.ge.trans.rmd.km.service.KnowledgeSeekerRequestServiceImpl" />

	<bean id="objRuleTesterResultsService"
		class="com.ge.trans.rmd.km.service.RuleTesterResultsServiceImpl" />
	<!-- <bean id="ruleSearchResultService" class="com.ge.trans.rmd.km.service.RuleSearchResultServiceImpl"/> -->
	<bean id="testerBean" class="com.ge.trans.rmd.km.mvc.model.TesterVO" />
	<bean name="objKnowledgeSeekerBean" class="com.ge.trans.rmd.km.mvc.model.KnowledgeSeekerBean"
		scope="prototype"></bean>
	<bean name="objRxBean" class="com.ge.trans.rmd.km.mvc.model.RxBean"
		scope="prototype">
		<!-- <property name="address" ref="address"/> -->
	</bean>
	<!-- KM Related Entries -->

	<!-- For Spring caching -->
	<cache:annotation-driven />

	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager"
		p:cache-manager-ref="ehcache" depends-on="ehcacheSystemProperties" />
	<bean id="ehcache"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"
		p:config-location="classpath:RMDWebEhcache.xml" p:shared="true" />
	<!-- For Spring caching -->
	
	<!--  to capture method time taken -->
	
	 <bean id="rMDWebAroundInterceptor" class="com.ge.trans.rmd.aop.interceptors.RMDWebAroundInterceptor" />
	
	<bean id="regexAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="patterns">
			<list>
				<value>.+\.controller\..+</value>
				<value>.+\.service\..+</value>
				<value>.+\.dao\..+</value>
				<value>com.ge.trans.rmd.common.util.WebServiceInvoker</value>
				<!-- <value>.+\.common\..+</value> -->
			</list>
		</property>
		<property name="advice" ref="rMDWebAroundInterceptor" />
	</bean>
	
	<aop:aspectj-autoproxy proxy-target-class="true"/>
	
