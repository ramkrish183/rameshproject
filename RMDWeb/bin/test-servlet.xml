		http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.ge.trans.rmd" />
	<context:component-scan base-package="javax.servlet.http"></context:component-scan>
	<task:annotation-driven />

	<mvc:annotation-driven />
	<bean id="context" class="org.springframework.mock.web.MockServletContext">
	</bean>
	<bean id="request" class="org.springframework.mock.web.MockHttpServletRequest">
	</bean>
	<bean id="response" class="org.springframework.mock.web.MockHttpServletResponse">
	</bean>
