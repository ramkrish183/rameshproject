<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd  
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd  
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd  
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
	<bean id="contextApplicationContextProvider"
		class="com.ge.trans.eoa.services.kep.common.resources.RMDApplicationContextProvider">
	</bean>
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename">
			<value>
				classpath:com/ge/trans/eoa/services/kep/common/resources/RMDServiceMessages
			</value>
		</property>
	</bean>

	<import
		resource="classpath:com/ge/trans/eoa/services/kep/common/resources/service-beans.xml" />
	<import
		resource="classpath:com/ge/trans/eoa/services/kep/common/resources/bo-beans.xml" />
	<import
		resource="classpath:com/ge/trans/eoa/services/kep/common/resources/dao-beans.xml" />


	<!-- This is to load any properties from properties file. The configurere 
		also looks in system properties -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	</bean>

	<!-- INTERCEPTORS - STARTS -->
	<bean id="beforeLogger"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="beforeInterceptor" />
		</property>
		<property name="patterns">
			<value>com.ge.trans.rmd.*.*.*.intf.*</value>
		</property>
	</bean>

	<bean id="afterLogger"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="afterInterceptor" />
		</property>
		<property name="patterns">
			<value>com.ge.trans.rmd.*.*.*.intf.*</value>
		</property>
	</bean>

	<bean id="exceptionLogger"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="exceptionInterceptor" />
		</property>
		<property name="patterns">
			<value>com.ge.trans.rmd.*.*.*.intf.*</value>
		</property>
	</bean>

	<bean id="beforeInterceptor" class="com.ge.trans.rmd.logging.RMDBeforeLoggingInterceptor" />
	<bean id="afterInterceptor" class="com.ge.trans.rmd.logging.RMDAfterLoggingInterceptor" />
	<bean id="exceptionInterceptor" class="com.ge.trans.rmd.logging.RMDExceptionLogger" />
	<!-- INTERCEPTORS - ENDS -->

</beans>