	<import
		resource="classpath:com/ge/trans/eoa/services/common/resources/dao-beans.xml" />
	<import
		resource="classpath:com/ge/trans/eoa/services/common/resources/transaction-config.xml" />
	<import
		resource="classpath:com/ge/trans/rmd/tools/common/resources/RMDToolsReferCaseBeanContext.xml" />

